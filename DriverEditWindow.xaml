<Window x:Class="BITMasterTask.DriverEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Водитель" Height="230" Width="360"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Фамилия:" VerticalAlignment="Center"
                   Foreground="{StaticResource TextSecondaryBrush}" />
        <TextBox Grid.Column="1" Margin="5,0,0,5"
                 Text="{Binding Surname, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Grid.Row="1" Text="Имя:" VerticalAlignment="Center"
                   Foreground="{StaticResource TextSecondaryBrush}" />
        <TextBox Grid.Row="1" Grid.Column="1" Margin="5,0,0,5"
                 Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Grid.Row="2" Text="Отчество:" VerticalAlignment="Center"
                   Foreground="{StaticResource TextSecondaryBrush}" />
        <TextBox Grid.Row="2" Grid.Column="1" Margin="5,0,0,5"
                 Text="{Binding Patronymic, UpdateSourceTrigger=PropertyChanged}" />

        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="ОК" Width="80" Margin="0,0,5,0" IsDefault="True" Click="Ok_Click" />
            <Button Content="Отмена" Width="80" IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>

