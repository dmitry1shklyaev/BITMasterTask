<Window x:Class="BITMasterTask.CarEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Машина" Height="180" Width="340"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Название:" VerticalAlignment="Center"
                   Foreground="{StaticResource TextSecondaryBrush}" />
        <TextBox Grid.Column="1"
                 Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="ОК" Width="80" Margin="0,0,5,0" IsDefault="True" Click="Ok_Click" />
            <Button Content="Отмена" Width="80" IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>

